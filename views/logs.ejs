<!-- views/logs.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logs de Execuções</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Logs de Execuções</h1>

    <!-- Barra de pesquisa -->
    <form action="/logs" method="get">
        <input type="text" name="search" placeholder="Buscar jogador..." value="<%= searchTerm %>">
        <button type="submit">Buscar</button>
    </form>

    <!-- Tabela com os logs -->
    <table>
        <thead>
            <tr>
                <th>Jogador</th>
                <th>Execuções</th>
            </tr>
        </thead>
        <tbody>
            <% logs.forEach(log => { %>
                <tr>
                    <td><%= log.playerName %></td>
                    <td><%= log.logCount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
